             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitHubApp.Resources.Styles.DarkTheme">
    <!--#region  BackgroundColors-->

    <Color
        x:Key="PrimaryLight">
        #000000
    </Color>

    <Color
        x:Key="SecondaryLight">
        #E6E7E8
    </Color>

    <Color
        x:Key="PrimaryDark">
        #FFFFFF
    </Color>

    <!--#endregion-->

    <!--#region  Fonts-->

    <Color
        x:Key="FontPrimary">
        #FFFFFF
    </Color>

    <Color
        x:Key="FontSecondary">
        #767676
    </Color>

    <Color
        x:Key="FontAccentPrimary">
        #F44063
    </Color>

    <Color
        x:Key="FontAccentSecondary">
        #00C5C2
    </Color>

    <Color
        x:Key="FontInverted">
        #000000
    </Color>
    <Color
        x:Key="BusyPageBackgroundColor">
        #000
    </Color>
</ResourceDictionary>