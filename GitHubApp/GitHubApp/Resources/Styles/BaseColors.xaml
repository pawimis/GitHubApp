<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="GitHubApp.Resources.Styles.BaseColors"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color
        x:Key="Accent">
        #F44063
    </Color>
    <Color
        x:Key="AccentSecondary">
        #00C5C2
    </Color>
    <Color
        x:Key="AccentSecondaryLight">
        #CCF3F3
    </Color>
    <Color
        x:Key="BorderFrame">
        #D6D4D4
    </Color>
    <SolidColorBrush
        x:Key="AccentSecondaryLightBrush"
        Color="{DynamicResource AccentSecondaryLight}" />
    <SolidColorBrush
        x:Key="AccentSecondaryBrush"
        Color="{DynamicResource AccentSecondary}" />

</ResourceDictionary>